<html>
<head>

    {{#pageTitle}}
        <title>{{pageTitle}}</title>
    {{/pageTitle}}

    {{^pageTitle}}
        <title>{{helpers.defaultPageTitle}}</title>
    {{/pageTitle}}

    <link rel="stylesheet" href="/assets/css/style.css">


</head>
<body>
<div class="header">
    <h1>HEADER</h1>    

    <hr>

    <ul>
        {{#helpers.menu}}
            <li>
                <a href={{slug}}>{{name}}</a>
            </li>
        {{/helpers.menu}}
    </ul>

    <hr>


{{#flashes}}
    {{#success}}
        <div>{{.}}</div>
    {{/success}}
    
    {{#error}}
        <div>{{.}}</div>
    {{/error}}

    {{#info}}
        <div>{{.}}</div>
    {{/info}}
{{/flashes}}
